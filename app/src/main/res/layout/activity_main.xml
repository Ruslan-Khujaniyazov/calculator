<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextNumberDecimal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:ems="10"
        android:inputType="numberDecimal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/button_clear"
            android:layout_width="@dimen/number_button_width"
            android:layout_height="@dimen/number_button_height"
            android:layout_margin="@dimen/button_margin"
            android:text="@string/button_clear" />

        <Button
            android:id="@+id/button_delete"
            android:layout_width="@dimen/number_button_width"
            android:layout_height="@dimen/number_button_height"
            android:layout_margin="@dimen/button_margin"
            android:text="@string/button_delete" />

        <Button
            android:id="@+id/button_percentage"
            android:layout_width="@dimen/number_button_width"
            android:layout_height="@dimen/number_button_height"
            android:layout_margin="@dimen/button_margin"
            android:text="@string/button_percentage" />

        <Button
            android:id="@+id/button_division"
            android:layout_width="@dimen/number_button_width"
            android:layout_height="@dimen/number_button_height"
            android:layout_margin="@dimen/button_margin"
            android:text="@string/button_division" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/button7"
            android:layout_width="@dimen/number_button_width"
            android:layout_height="@dimen/number_button_height"
            android:layout_margin="@dimen/button_margin"
            android:text="@string/button_7" />

        <Button
            android:id="@+id/button8"
            android:layout_width="@dimen/number_button_width"
            android:layout_height="@dimen/number_button_height"
            android:layout_margin="@dimen/button_margin"
            android:text="@string/button_8" />

        <Button
            android:id="@+id/button9"
            android:layout_width="@dimen/number_button_width"
            android:layout_height="@dimen/number_button_height"
            android:layout_margin="@dimen/button_margin"
            android:text="@string/button_9" />

        <Button
            android:id="@+id/button_multiplication"
            android:layout_width="@dimen/number_button_width"
            android:layout_height="@dimen/number_button_height"
            android:layout_margin="@dimen/button_margin"
            android:text="@string/button_multiplication" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/button4"
            android:layout_width="@dimen/number_button_width"
            android:layout_height="@dimen/number_button_height"
            android:layout_margin="@dimen/button_margin"
            android:text="@string/button_4" />

        <Button
            android:id="@+id/button5"
            android:layout_width="@dimen/number_button_width"
            android:layout_height="@dimen/number_button_height"
            android:layout_margin="@dimen/button_margin"
            android:text="@string/button_5" />

        <Button
            android:id="@+id/button6"
            android:layout_width="@dimen/number_button_width"
            android:layout_height="@dimen/number_button_height"
            android:layout_margin="@dimen/button_margin"
            android:text="@string/button_6" />

        <Button
            android:id="@+id/button_subtraction"
            android:layout_width="@dimen/number_button_width"
            android:layout_height="@dimen/number_button_height"
            android:layout_margin="@dimen/button_margin"
            android:text="@string/button_subtraction" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/button1"
            android:layout_width="@dimen/number_button_width"
            android:layout_height="@dimen/number_button_height"
            android:layout_margin="@dimen/button_margin"
            android:text="@string/button_1" />

        <Button
            android:id="@+id/button2"
            android:layout_width="@dimen/number_button_width"
            android:layout_height="@dimen/number_button_height"
            android:layout_margin="@dimen/button_margin"
            android:text="@string/button_2" />

        <Button
            android:id="@+id/button3"
            android:layout_width="@dimen/number_button_width"
            android:layout_height="@dimen/number_button_height"
            android:layout_margin="@dimen/button_margin"
            android:text="@string/button_3" />

        <Button
            android:id="@+id/button_sum"
            android:layout_width="@dimen/number_button_width"
            android:layout_height="@dimen/number_button_height"
            android:layout_margin="@dimen/button_margin"
            android:text="@string/button_sum" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/button_positive_or_negative"
            android:layout_width="@dimen/number_button_width"
            android:layout_height="@dimen/number_button_height"
            android:layout_margin="@dimen/button_margin"
            android:text="@string/button_positive_or_negative" />

        <Button
            android:id="@+id/button0"
            android:layout_width="@dimen/number_button_width"
            android:layout_height="@dimen/number_button_height"
            android:layout_margin="@dimen/button_margin"
            android:text="@string/button_0" />

        <Button
            android:id="@+id/button_comma"
            android:layout_width="@dimen/number_button_width"
            android:layout_height="@dimen/number_button_height"
            android:layout_margin="@dimen/button_margin"
            android:text="@string/button_comma" />

        <Button
            android:id="@+id/button_result"
            android:layout_width="@dimen/number_button_width"
            android:layout_height="@dimen/number_button_height"
            android:layout_margin="@dimen/button_margin"
            android:text="@string/button_result" />

    </LinearLayout>

</LinearLayout>