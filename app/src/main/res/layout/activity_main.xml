    <EditText
        android:id="@+id/numEnterTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/zero_margin"
        android:layout_marginTop="@dimen/text_view_margin"
        android:layout_marginEnd="@dimen/text_view_margin"
        android:layout_marginStart="@dimen/text_view_margin"
        android:paddingEnd="@dimen/text_view_padding"
        android:paddingStart="@dimen/text_view_padding"
        android:layout_weight="0.5"
        android:background="@color/transparent_grey"
        android:ems="10"
        android:gravity="bottom|end"
        android:hint="@string/start_hint_0"
        android:textAlignment="gravity"
        android:fontFamily="serif"
        android:textSize="@dimen/num_enter_text_view_text_size" />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/zero_margin"
        android:layout_marginBottom="@dimen/text_view_margin"
        android:layout_marginEnd="@dimen/text_view_margin"
        android:layout_marginStart="@dimen/text_view_margin"
        android:paddingEnd="@dimen/text_view_padding"
        android:paddingStart="@dimen/text_view_padding"
        android:layout_weight="0.7"
        android:background="@color/transparent_grey"
        android:ems="10"
        android:gravity="bottom|end"
        android:textAlignment="gravity"
        android:fontFamily="serif"
        android:textSize="@dimen/result_text_view_text_size" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_clear"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/button_margin"
                android:layout_weight="1"
                android:backgroundTint="@color/transparent_grey"
                android:fontFamily="serif"
                android:text="@string/button_clear"
                android:textColor="@color/red"
                android:textSize="@dimen/button_text_size"
                android:textAlignment="center"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_delete"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/button_margin"
                android:layout_weight="1"
                android:backgroundTint="@color/transparent_grey"
                android:fontFamily="serif"
                android:text="@string/button_delete"
                android:textColor="@color/orange"
                android:textSize="@dimen/button_text_size" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_percentage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/button_margin"
                android:layout_weight="1"
                android:backgroundTint="@color/transparent_grey"
                android:fontFamily="serif"
                android:text="@string/button_percentage"
                android:textColor="@color/green"
                android:textSize="@dimen/button_text_size" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_division"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/button_margin"
                android:layout_weight="1"
                android:backgroundTint="@color/transparent_grey"
                android:fontFamily="serif"
                android:text="@string/button_division"
                android:textColor="@color/green"
                android:textSize="@dimen/button_text_size" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/button_margin"
                android:layout_weight="1"
                android:backgroundTint="@color/transparent_grey"
                android:fontFamily="serif"
                android:text="@string/button_7"
                android:textSize="@dimen/button_text_size" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/button_margin"
                android:layout_weight="1"
                android:backgroundTint="@color/transparent_grey"
                android:fontFamily="serif"
                android:text="@string/button_8"
                android:textSize="@dimen/button_text_size" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/button_margin"
                android:layout_weight="1"
                android:backgroundTint="@color/transparent_grey"
                android:fontFamily="serif"
                android:text="@string/button_9"
                android:textSize="@dimen/button_text_size" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_multiplication"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/button_margin"
                android:layout_weight="1"
                android:backgroundTint="@color/transparent_grey"
                android:fontFamily="serif"
                android:text="@string/button_multiplication"
                android:textColor="@color/green"
                android:textSize="@dimen/button_text_size" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/button_margin"
                android:layout_weight="1"
                android:backgroundTint="@color/transparent_grey"
                android:fontFamily="serif"
                android:text="@string/button_4"
                android:textSize="@dimen/button_text_size" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/button_margin"
                android:layout_weight="1"
                android:backgroundTint="@color/transparent_grey"
                android:fontFamily="serif"
                android:text="@string/button_5"
                android:textSize="@dimen/button_text_size" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/button_margin"
                android:layout_weight="1"
                android:backgroundTint="@color/transparent_grey"
                android:fontFamily="serif"
                android:text="@string/button_6"
                android:textSize="@dimen/button_text_size" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_subtraction"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/button_margin"
                android:layout_weight="1"
                android:backgroundTint="@color/transparent_grey"
                android:fontFamily="serif"
                android:text="@string/button_subtraction"
                android:textColor="@color/green"
                android:textSize="@dimen/button_text_size" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/button_margin"
                android:layout_weight="1"
                android:backgroundTint="@color/transparent_grey"
                android:fontFamily="serif"
                android:text="@string/button_1"
                android:textSize="@dimen/button_text_size" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/button_margin"
                android:layout_weight="1"
                android:backgroundTint="@color/transparent_grey"
                android:fontFamily="serif"
                android:text="@string/button_2"
                android:textSize="@dimen/button_text_size" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/button_margin"
                android:layout_weight="1"
                android:backgroundTint="@color/transparent_grey"
                android:fontFamily="serif"
                android:text="@string/button_3"
                android:textSize="@dimen/button_text_size" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_addition"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/button_margin"
                android:layout_weight="1"
                android:backgroundTint="@color/transparent_grey"
                android:fontFamily="serif"
                android:text="@string/button_sum"
                android:textColor="@color/green"
                android:textSize="@dimen/button_text_size" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_positive_or_negative"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/button_margin"
                android:layout_weight="1"
                android:backgroundTint="@color/transparent_grey"
                android:fontFamily="serif"
                android:text="@string/button_positive_or_negative"
                android:textSize="@dimen/button_text_size" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/button_margin"
                android:layout_weight="1"
                android:backgroundTint="@color/transparent_grey"
                android:fontFamily="serif"
                android:text="@string/button_0"
                android:textSize="@dimen/button_text_size" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_period"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/button_margin"
                android:layout_weight="1"
                android:backgroundTint="@color/transparent_grey"
                android:fontFamily="serif"
                android:text="@string/button_period"
                android:textSize="@dimen/button_text_size" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_equals"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/button_margin"
                android:layout_weight="1"
                android:backgroundTint="@color/green"
                android:fontFamily="serif"
                android:text="@string/button_result"
                android:textColor="@color/white"
                android:textSize="@dimen/button_text_size" />

        </TableRow>

    </TableLayout>


</LinearLayout>